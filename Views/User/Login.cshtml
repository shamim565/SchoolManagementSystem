@{
    ViewData["Title"] = "Login";
}

<div class="container my-4 my-md-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-maroon text-white text-center py-3">
                    <h2 class="mb-1 fs-4">Grades Management System</h2>
                    <p class="small text-light mb-0">Please log in to continue</p>
                </div>
                <div class="card-body p-3">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form asp-action="Login" id="Login" method="post" novalidate>
                        <div class="bg-trademark">
                            <div class="mb-3">
                                <label for="email" class="form-label fw-semibold">Email</label>
                                <input id="email" name="email" class="form-control" required placeholder="Enter your Email" autofocus>
                                <div class="invalid-feedback">Email is required.</div>
                            </div>
                            <div class="mb-4">
                                <label for="password" class="form-label fw-semibold">Password</label>
                                <input id="password" name="password" type="password" class="form-control" required placeholder="Enter your password" autocomplete="off" aria-describedby="passwordHelp">
                                <div class="invalid-feedback">Password is required.</div>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-secondary btn-lg">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}