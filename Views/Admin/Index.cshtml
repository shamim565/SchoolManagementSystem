@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container my-4">
    <h1 class="text-center mb-4">Admin Dashboard</h1>
    <div class="row row-cols-1 row-cols-md-3 g-3 justify-content-center">

        <div class="col">
            <a asp-action="Students" class="text-decoration-none">
                <div class="card shadow-sm text-center p-4 border-0 bg-primary text-white">
                    <div class="fs-1">🎓</div>
                    <h5 class="mt-2">Manage Students</h5>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-action="Teachers" class="text-decoration-none">
                <div class="card shadow-sm text-center p-4 border-0 bg-success text-white">
                    <div class="fs-1">👨‍🏫</div>
                    <h5 class="mt-2">Manage Teachers</h5>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="User" asp-action="Logout" class="text-decoration-none">
                <div class="card shadow-sm text-center p-4 border-0 bg-danger text-white">
                    <div class="fs-1">🚪</div>
                    <h5 class="mt-2">Logout</h5>
                </div>
            </a>
        </div>

    </div>
</div>
