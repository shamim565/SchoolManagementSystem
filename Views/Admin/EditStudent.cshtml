@model SchoolManagementSystem.Models.Student

<div class="container my-4">
    <h2>Edit Student</h2>
    <form asp-action="EditStudent" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="User.Id" />

        <input type="hidden" asp-for="User.Password" />

        <div class="form-group mb-3">
            <label asp-for="User.FirstName"></label>
            <input asp-for="User.FirstName" class="form-control" />
            <span asp-validation-for="User.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="User.LastName"></label>
            <input asp-for="User.LastName" class="form-control" />
            <span asp-validation-for="User.LastName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="User.MiddleName"></label>
            <input asp-for="User.MiddleName" class="form-control" />
            <span asp-validation-for="User.MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="User.Sex"></label>
            <select asp-for="User.Sex" class="form-select">
                <option value="">Select sex</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="User.Sex" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="User.DOB"></label>
            <input asp-for="User.DOB" type="date" class="form-control" />
            <span asp-validation-for="User.DOB" class="text-danger"></span>
        </div>

        <!-- Student Fields -->
        <div class="form-group mb-3">
            <label asp-for="Grade"></label>
            <input asp-for="Grade" class="form-control" />
            <span asp-validation-for="Grade" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Track"></label>
            <input asp-for="Track" class="form-control" />
            <span asp-validation-for="Track" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Section"></label>
            <input asp-for="Section" class="form-control" />
            <span asp-validation-for="Section" class="text-danger"></span>
        </div>

        <!-- Display general errors (e.g., database errors) -->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Students" class="btn btn-secondary">Cancel</a>
    </form>
</div>